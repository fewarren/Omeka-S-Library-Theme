<?php
$this->headLink()->prependStylesheet($this->assetUrl('css/page-blocks.css', 'Omeka'));
$this->htmlElement('body')->appendAttribute('class', 'page ' . $page->slug());
$this->htmlElement('body')->appendAttribute('class', 'full-width');

// Suppress page title when rendering the site's homepage to avoid duplicate tagline under hero
// Guard against null $site to prevent PHP 8 TypeError
$site = $site ?? $this->vars()->site;
$homepage = ($site && method_exists($site, 'homepage')) ? $site->homepage() : null;
$isHomepage = $homepage && $homepage->id() === $page->id();
if (!$isHomepage) {
    $this->pageTitle($page->title(), 2);
}
$showPagePagination = $this->siteSetting('show_page_pagination', true);
?>

<?php
$nav = $site->publicNav();
$container = $nav->getContainer();
$activePage = $nav->findActive($container);
if ($activePage):
?>
    <?php if ($activePage['depth'] !== 0): ?>
    <nav class="breadcrumbs" aria-label="<?= $this->translate('Breadcrumb') ?>"><?php echo $nav->breadcrumbs()->setPartial('common/foundation-breadcrumbs'); ?></nav>
    <?php endif; ?>
<?php endif; ?>

<?php if ($activePage && $this->themeSetting('render_submenu_by_default', '0') === '1'): ?>
    <?php if ($this->displayNavigation && $activePage['page']->hasPages()): ?>
    <nav class="sub-menu top-bar" data-sticky-container>
        <div class="sticky" data-sticky data-margin-top="0" data-anchor="blocks">
            <?php echo $this->partial('common/sub-navigation', [
                'container' => $container,
                'children' => $activePage['page']->getPages(),
                'level' => 1,
                'ulClass' => 'horizontal menu'
            ]); ?>
        </div>
    </nav>
    <?php endif; ?>
<?php endif; ?>

<?php $this->trigger('view.show.before'); ?>
<div id="blocks" class="blocks">
    <?php echo $this->content; ?>
</div>
<?php $this->trigger('view.show.after'); ?>
<?php if ($showPagePagination): ?>
<?php echo $this->sitePagePagination(); ?>
<?php endif; ?>
